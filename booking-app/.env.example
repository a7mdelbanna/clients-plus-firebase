# API Configuration
# Express API Base URL (Wave 2 APIs)
REACT_APP_API_BASE_URL=http://localhost:3001/api/v1
REACT_APP_WS_URL=ws://localhost:3001

# Wave 2 API Migration Flags
REACT_APP_USE_EXPRESS_APPOINTMENTS=true
REACT_APP_USE_EXPRESS_CLIENTS=false

# WebSocket Configuration  
REACT_APP_USE_WEBSOCKET=false

# Migration Configuration
REACT_APP_FORCE_EXPRESS_MODE=false
REACT_APP_ENABLE_FALLBACK=true

# Development Configuration
REACT_APP_DEBUG_API=false
REACT_APP_LOG_LEVEL=info

# Booking App Configuration
REACT_APP_ENABLE_CLIENT_AUTH=true
REACT_APP_ENABLE_GUEST_BOOKING=true
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_ENABLE_MULTI_LANGUAGE=true

# Feature Flags
REACT_APP_ENABLE_SMS_VERIFICATION=false
REACT_APP_ENABLE_EMAIL_VERIFICATION=true
REACT_APP_ENABLE_SOCIAL_LOGIN=false