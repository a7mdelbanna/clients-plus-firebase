# API Configuration
# Express API Base URL (Wave 1 & 2 APIs)
REACT_APP_API_BASE_URL=http://localhost:3001/api/v1
REACT_APP_WS_URL=ws://localhost:3001

# Wave 1 API Migration Flags
REACT_APP_USE_EXPRESS_SERVICES=true
REACT_APP_USE_EXPRESS_STAFF=true
REACT_APP_USE_EXPRESS_BRANCHES=true
REACT_APP_USE_EXPRESS_PRODUCTS=true
REACT_APP_USE_EXPRESS_CLIENTS=true

# Wave 2 API Migration Flags
REACT_APP_USE_EXPRESS_APPOINTMENTS=false
REACT_APP_USE_EXPRESS_INVOICES=false

# WebSocket Configuration
REACT_APP_USE_WEBSOCKET=true

# Migration Configuration
REACT_APP_FORCE_EXPRESS_MODE=false
REACT_APP_ENABLE_FALLBACK=true

# Development Configuration
REACT_APP_DEBUG_API=false
REACT_APP_LOG_LEVEL=info

# Google Maps API Configuration
# Get your API key from https://console.cloud.google.com/
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Superadmin Configuration
# Generate a secure random 32-character hash for the superadmin URL
# Example: openssl rand -hex 16
VITE_SUPERADMIN_URL_HASH=your_random_32_char_hash_here